{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "public/dist/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "analyze": {
      "dependsOn": ["build"],
      "outputs": ["analysis/**"]
    },
    "migrate": {
      "dependsOn": ["build", "analyze"],
      "outputs": ["migration-output/**"]
    },
    "quality": {
      "dependsOn": ["migrate"],
      "outputs": ["quality-reports/**"]
    }
  }
}