{
  "name": "mcp-server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/mcp-server/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/mcp-server",
        "main": "apps/mcp-server/src/main.ts",
        "tsConfig": "apps/mcp-server/tsconfig.app.json",
        "assets": [
          "apps/mcp-server/src/assets",
          {
            "glob": "**/*.json",
            "input": "apps/mcp-server/src/schemas",
            "output": "./schemas"
          }
        ],
        "webpackConfig": "{workspaceRoot}/tools/webpack/mcp-server.config.js"
      },
      "configurations": {
        "development": {
          "optimization": false,
          "sourceMap": true
        },
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/mcp-server/src/environments/environment.ts",
              "with": "apps/mcp-server/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "sourceMap": false,
          "extractLicenses": true
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "mcp-server:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "mcp-server:build:development"
        },
        "production": {
          "buildTarget": "mcp-server:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/mcp-server/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/mcp-server/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p apps/mcp-server/tsconfig.app.json --noEmit"
      }
    },
    "generate-schema": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/generate-mcp-schema.js"
      },
      "dependsOn": [
        "typecheck"
      ]
    }
  },
  "tags": [
    "type:app",
    "scope:mcp",
    "api:server"
  ]
}