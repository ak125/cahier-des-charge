{
  "extends": "nx/presets/npm.json",
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "affected": {
    "defaultBase": "main"
  },
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals",
      "!{projectRoot}/**/backup/**",
      "!{projectRoot}/**/archives_old/**",
      "!{workspaceRoot}/backup/**",
      "!{workspaceRoot}/archives_old/**",
      "!{projectRoot}/**/*.backup",
      "!{projectRoot}/**/*.bak"
    ],
    "production": [
      "default",
      "!{projectRoot}/**/*.spec.[jt]s",
      "!{projectRoot}/**/test/**/*",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/storybook/**/*",
      "!{projectRoot}/**/*.stories.[jt]s?(x)",
      "!{projectRoot}/.storybook/**/*"
    ],
    "testing": [
      "default",
      "{workspaceRoot}/jest.preset.js",
      "{workspaceRoot}/jest.config.[jt]s",
      "{projectRoot}/jest.config.[jt]s",
      "{projectRoot}/src/test-setup.[jt]s",
      "{projectRoot}/tsconfig.spec.json"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/babel.config.js",
      "{workspaceRoot}/jest.preset.js",
      "{workspaceRoot}/tsconfig.json",
      "{workspaceRoot}/.eslintrc.json",
      "{workspaceRoot}/biome.json",
      "{workspaceRoot}/nx.json"
    ]
  },
  "ignore": [
    "{workspaceRoot}/backup/**/*",
    "{workspaceRoot}/archives_old/**/*"
  ],
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "test",
          "lint",
          "typecheck",
          "e2e",
          "build-storybook"
        ],
        "parallel": 8,
        "useDaemonProcess": true,
        "cacheDirectory": ".nx-cache",
        "runtimeCacheInputs": [
          "node -v",
          "echo $NX_CLOUD_DISTRIBUTED_EXECUTION"
        ]
      }
    },
    "cloud": {
      "runner": "nx-cloud",
      "options": {
        "cacheableOperations": [
          "build",
          "test",
          "lint",
          "typecheck",
          "e2e",
          "build-storybook"
        ],
        "accessToken": "${NX_CLOUD_ACCESS_TOKEN}",
        "useDaemonProcess": true,
        "distributedCaching": true,
        "distributedCiBuildTimeoutInMinutes": 30,
        "runtimeCacheInputs": [
          "node -v"
        ]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "production",
        "^production"
      ],
      "cache": true,
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "test": {
      "inputs": [
        "testing",
        "^production"
      ],
      "cache": true,
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ]
    },
    "lint": {
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.eslintignore",
        "{workspaceRoot}/biome.json"
      ],
      "cache": true
    },
    "typecheck": {
      "inputs": [
        "default",
        "{workspaceRoot}/tsconfig.json",
        "{workspaceRoot}/tsconfig.*.json",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/tsconfig.*.json"
      ],
      "cache": true
    },
    "e2e": {
      "inputs": [
        "default",
        "^production"
      ],
      "cache": true,
      "outputs": [
        "{workspaceRoot}/cypress/videos",
        "{workspaceRoot}/cypress/screenshots"
      ]
    },
    "build-storybook": {
      "inputs": [
        "default",
        "^production",
        "{projectRoot}/.storybook/**/*",
        "{projectRoot}/**/*.stories.[jt]s?(x)"
      ],
      "cache": true,
      "outputs": [
        "{options.outputPath}"
      ]
    }
  },
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    },
    {
      "plugin": "@nx/jest/plugin",
      "options": {
        "targetName": "test"
      }
    },
    {
      "plugin": "@nx/webpack/plugin",
      "options": {
        "targetName": "build"
      }
    },
    {
      "plugin": "@nx/storybook/plugin",
      "options": {
        "buildStorybookTargetName": "build-storybook",
        "serveStorybookTargetName": "storybook",
        "testStorybookTargetName": "test-storybook"
      }
    }
  ],
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "packages"
  },
  "defaultProject": "frontend",
  "generators": {
    "@nx/react": {
      "application": {
        "style": "scss",
        "linter": "eslint",
        "bundler": "webpack",
        "babel": true
      },
      "component": {
        "style": "scss"
      },
      "library": {
        "style": "scss",
        "linter": "eslint"
      }
    },
    "@nx/remix": {
      "application": {
        "style": "scss",
        "linter": "eslint"
      }
    },
    "@nx/next": {
      "application": {
        "style": "scss",
        "linter": "eslint"
      }
    },
    "@nx/nest": {
      "application": {
        "linter": "eslint",
        "unitTestRunner": "jest",
        "e2eTestRunner": "jest"
      },
      "library": {
        "linter": "eslint",
        "unitTestRunner": "jest"
      }
    },
    "excludeFiles": [
      "{workspaceRoot}/backup/**/*",
      "{workspaceRoot}/archives_old/**/*",
      "{projectRoot}/**/backup/**/*",
      "{projectRoot}/**/*.backup",
      "{projectRoot}/**/*.bak"
    ]
  }
}