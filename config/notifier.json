{
  "redis": {
    "url": "redis://localhost:6379",
    "enabled": true,
    "channels": ["mcp:notification", "mcp:migration", "mcp:qa"]
  },
  "supabase": {
    "url": "https://your-project.supabase.co",
    "key": "your-supabase-key",
    "enabled": true,
    "tables": ["audit.migrations", "audit.qa_results"]
  },
  "slack": {
    "token": "xoxb-your-slack-token",
    "enabled": true,
    "defaultChannel": "#migrations-status",
    "mentionUsers": ["U0123456789"],
    "events": ["migration:completed", "migration:failed", "qa:ok", "qa:failed"]
  },
  "email": {
    "smtp": {
      "host": "smtp.example.com",
      "port": 587,
      "secure": false,
      "auth": {
        "user": "mcp-notifier@example.com",
        "pass": "your-smtp-password"
      }
    },
    "enabled": true,
    "defaultRecipients": ["team@example.com", "dev.team@example.com"],
    "events": ["migration:failed", "qa:failed"]
  },
  "discord": {
    "webhook": "https://discord.com/api/webhooks/your-webhook-id/your-webhook-token",
    "enabled": false,
    "events": ["migration:completed", "migration:failed", "qa:ok", "qa:failed"]
  },
  "webhook": {
    "url": "https://webhook.site/your-custom-webhook",
    "enabled": false,
    "events": ["migration:*", "qa:*"]
  },
  "manifestPath": "/workspaces/cahier-des-charge/MCPManifest.json"
}
