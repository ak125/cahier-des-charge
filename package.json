{
  "name": "migration-ai-pipeline",
  "version": "1.0.0",
  "description": "Pipeline IA pour la migration de code legacy PHP vers TypeScript/Remix/NestJS",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node tools/scripts/dev.js",
    "test": "jest",
    "build": "node tools/scripts/build.js",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --apply .",
    "organize-project": "node tools/scripts/organize-project.js",
    "analyze-duplicates": "node tools/scripts/analyze-duplicates.js",
    "diagnostics": "node tools/scripts/diagnostic.js",
    "type-check": "tsc --noEmit",
    "validate": "tsc --noEmit && biome check .",
    "ai:validate": "node packages/safe-validator/validate.js",
    "graph": "nx graph",
    "graph:export": "nx graph --file=architecture.html",
    "graph:json": "nx graph --file=architecture.json",
    "prisma:generate": "prisma generate && npm run zod:generate",
    "zod:generate": "ts-node tools/scripts/generate-zod-from-prisma.ts",
    "zod:validate": "ts-node tools/scripts/validate-zod-schemas.ts",
    "type:check": "tsc --noEmit && npm run zod:validate",
    "cleanup": "bash tools/scripts/clean-root-directory.sh",
    "optimize:space": "bash tools/scripts/optimize-disk-space-fixed.sh",
    "optimize:git": "bash tools/scripts/optimize-git-repo-fixed.sh",
    "optimize:packages": "bash tools/scripts/clean-packages-fixed.sh",
    "docs:generate": "ts-node tools/scripts/docs/generate-docs.ts",
    "docs:serve": "cd documentation && npm run start",
    "docs:build": "cd documentation && npm run build",
    "docs:deploy": "cd documentation && npm run deploy",
    "docs:validate": "CHECK_EXTERNAL_LINKS=false ts-node tools/scripts/docs/validate-links.ts",
    "lint:orchestrator": "biome lint ./packages/business ./packages/orchestration ./orchestrators",
    "format:check:orchestrator": "biome check ./packages/business ./packages/orchestration ./orchestrators",
    "format:orchestrator": "biome format --write ./packages/business ./packages/orchestration ./orchestrators",
    "test:unit:orchestrator": "jest --config=jest.orchestrator.config.js \"--testPathPattern=packages/business/tests/.*\\.test\\.(ts|js)$\"",
    "test:integration:orchestrator": "jest --config=jest.orchestrator.config.js \"--testPathPattern=packages/business/tests/integration/.*\\.test\\.(ts|js)$\"",
    "test:coverage:orchestrator": "jest --config=jest.orchestrator.config.js --coverage",
    "n8n:audit": "ts-node tools/scripts/n8n-migration/extract-workflows.ts",
    "n8n:classify": "ts-node tools/scripts/n8n-migration/classify-workflows.ts",
    "n8n:docs": "ts-node tools/scripts/n8n-migration/generate-workflow-docs.ts",
    "n8n:dashboard": "node tools/scripts/n8n-migration/migration-dashboard.js"
  },
  "dependencies": {
