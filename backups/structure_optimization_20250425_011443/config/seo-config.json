{
  "site": {
    "name": "Mon Site",
    "baseUrl": "https://www.mon-site.fr",
    "defaultTitle": "Mon Site - Titre par défaut",
    "defaultDescription": "Description par défaut du site",
    "defaultImageUrl": "/images/og-default.jpg",
    "defaultImageAlt": "Mon Site",
    "locale": "fr_FR",
    "twitter": {
      "handle": "@monsite",
      "cardType": "summary_large_image",
      "site": "@monsite"
    },
    "facebook": {
      "appId": "123456789"
    }
  },
  "quality": {
    "minScores": {
      "seo": 85,
      "accessibility": 80,
      "performance": 75,
      "bestPractices": 80
    },
    "blockers": {
      "missingSeoTitle": true,
      "missingSeoDescription": true,
      "missingCanonical": true,
      "duplicateTitle": true,
      "lowLighthouseScore": true
    }
  },
  "content": {
    "minTitleLength": 10,
    "maxTitleLength": 70,
    "minDescriptionLength": 50,
    "maxDescriptionLength": 160,
    "recommendedHeadings": true,
    "recommendedKeywords": true,
    "generateFaqs": true,
    "minContentLength": 300
  },
  "monitoring": {
    "enableLighthouse": true,
    "enableCanonicalCheck": true,
    "enableRedirectCheck": true,
    "enableContentAnalysis": true,
    "notifyOnIssues": true,
    "trackHistory": true,
    "dashboard": {
      "enabled": true,
      "path": "/admin/seo",
      "restrictAccess": true,
      "refreshInterval": 43200
    }
  },
  "pipeline": {
    "enableCiChecks": true,
    "blockMergeOnFail": true,
    "autoFix": {
      "enabled": true,
      "fixCanonicals": true,
      "fixRedirects": true,
      "fixMetaTags": true,
      "suggestContent": true
    }
  },
  "redirects": {
    "source": "htaccess",
    "preserveStatusCodes": true,
    "defaultStatusCode": 301,
    "trackRedirects": true
  },
  "agents": {
    "seoChecker": {
      "enabled": true,
      "minSeoScore": 85,
      "validateCanonicals": true,
      "validateRedirects": true,
      "runLighthouse": true,
      "autoFix": true
    },
    "canonicalValidator": {
      "enabled": true,
      "baseUrl": "https://www.mon-site.fr",
      "ignorePatterns": ["_dev", "_test", "admin"],
      "autoCorrect": true,
      "validateUrlStatus": true,
      "dbTracking": true
    },
    "redirectMapper": {
      "enabled": true,
      "htaccessPaths": ["./public/.htaccess"],
      "remixConfigPath": "./remix.config.js",
      "nestJSConfigPath": "./src/middleware/redirects.middleware.ts",
      "outputJsonPath": "./data/redirects.json",
      "validateRedirects": true
    },
    "auditRunner": {
      "enabled": true,
      "routes": "auto",
      "minSeoScore": 85,
      "failOnLowScore": false,
      "dbTracking": true,
      "concurrentAudits": 3,
      "generateRecommendations": true,
      "skipRoutes": ["admin", "api", "_dev"]
    },
    "contentEnhancer": {
      "enabled": true,
      "applyChanges": false,
      "targetContentTypes": ["product", "category", "article", "generic"],
      "enhancementFeatures": {
        "generateFAQ": true,
        "improveHeadings": true,
        "addStructuredData": true,
        "suggestRelatedContent": true,
        "optimizeKeywords": true
      }
    }
  }
}