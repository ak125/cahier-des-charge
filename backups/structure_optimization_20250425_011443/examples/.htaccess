# Fichier .htaccess exemple avec règles complexes
# Utilisé pour tester la migration vers Caddy

# Activation du moteur de réécriture
RewriteEngine On

# Règles de base
Options -Indexes
ServerSignature Off

# En-têtes de sécurité
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    Header set Permissions-Policy "geolocation=(), camera=(), microphone=()"
</IfModule>

# Gestion des erreurs
ErrorDocument 404 /errors/404.php
ErrorDocument 500 /errors/500.php

# Redirection HTTP vers HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirection www vers non-www
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^ https://%1%{REQUEST_URI} [L,R=301]

# Protection du fichier .htaccess
<Files .htaccess>
    Order Allow,Deny
    Deny from all
</Files>

# Protection des fichiers sensibles
<FilesMatch "(^\.env|\.config\.js|\.json|\.lock|\.git)">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Règles pour l'API
RewriteRule ^api/v1/([^/]+)/(.*)$ api/index.php?version=v1&resource=$1&params=$2 [QSA,L]
RewriteRule ^api/v2/([^/]+)/(.*)$ api/index.php?version=v2&resource=$1&params=$2 [QSA,L]

# Règles pour le legacy
RewriteRule ^legacy/old-page-([0-9]+)\.html$ /pages/view.php?id=$1 [L]
RewriteRule ^legacy/blog/(.*)$ /blog/$1 [R=301,L]

# Redirections SEO
RewriteRule ^old-services\.html$ /services/ [R=301,L]
RewriteRule ^contact\.html$ /contact/ [R=301,L]
RewriteRule ^products-list\.html$ /products/ [R=301,L]

# Pages supprimées
RewriteRule ^(promotions|outdated)/.*$ - [G,L]

# Pages de maintenance
RewriteCond %{REQUEST_URI} !^/maintenance\.html$
RewriteCond %{REMOTE_ADDR} !^(127\.0\.0\.1|192\.168\.1\.)
RewriteCond /var/www/.maintenance -f
RewriteRule ^(.*)$ /maintenance.html [L]

# Single Page Application (SPA)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(app|dashboard|admin)/.*$ /$1/index.html [L]

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json
</IfModule>

# Cache pour les fichiers statiques
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType text/x-javascript "access plus 1 month"
</IfModule>

# Authentification pour zone admin
<Directory "/var/www/html/admin">
    AuthType Basic
    AuthName "Zone d'administration"
    AuthUserFile /var/www/.htpasswd
    Require valid-user
    
    # Règles spécifiques à ce répertoire
    RewriteRule ^old-admin/(.*)$ new-admin/$1 [L]
</Directory>

# Règles spécifiques pour le dossier API
<Directory "/var/www/html/api">
    Options -Indexes
    AllowOverride None
    
    # Limiter l'accès à certaines IP
    Order Deny,Allow
    Deny from all
    Allow from 127.0.0.1
    Allow from 192.168.1.
    
    # Headers CORS
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header set Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept, Authorization"
</Directory>

# Règles pour les vieux navigateurs
RewriteCond %{HTTP_USER_AGENT} MSIE [6-8] [NC]
RewriteRule ^(.*)$ /browsers/outdated.html [L]

# Forcer le type MIME pour les webfonts
AddType font/woff .woff
AddType font/woff2 .woff2
AddType font/truetype .ttf
AddType font/opentype .ott .otf
AddType application/font-woff .woff
AddType application/x-font-woff .woff